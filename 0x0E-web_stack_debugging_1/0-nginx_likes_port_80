#!/usr/bin/env bash
# Debugging web server to listen on port 80

sudo sed -i 's/listen 8080 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen \[::\]:8080 default_server;/listen \[::\]:80 default_server;/' /etc/nginx/sites-available/default

# Restart the Nginx service
sudo service nginx restart
